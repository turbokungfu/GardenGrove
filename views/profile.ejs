<%- include('partials/header') -%>

        <div class="container float-start col-6">
          <div
            id="map"
            style="width: 500px; height: 500px;border-radius: 5px;"
          ></div>
          </div>

          <div class="container">
          <div class="mt-5 float-right">
            <h2>Tell the world about your farm.</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
                <div class="form-group">
                  <label for="id" class="form-label">Farm ID</label>
                  <input type="text" id="id" class="form-control" name="id"/>
                </div>
                <div class="form-group">
                  <label for="address" class="form-label">Farm Address</label>
                  <input type="text" id="address" class="form-control" name="address"/>
                </div>
                <button type="submit" class="btn btn-primary">Add Farm</button>
                <a href="/profile" class="btn btn-secondary">Back</a>
              </form>
            </div>
          </div>



      <div class="col-4">
        <ul class="row list-unstyled">
     
        <% for(var i=0; i<posts.length; i++){ %>
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>"> 
          </a>
        </li>
        <li><%= posts[i].location.formattedAddress%></li>
        <li><%= posts[i].title%></li>
        <li><%= posts[i].caption%></li>
            <%}%>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary float-start" href="/feed">Return to Feed</a>
        </div>  
      </div> 
      <div class="col-3 float-end">
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </div>
    
      


<script src="https://api.mapbox.com/mapbox-gl-js/v1.4.1/mapbox-gl.js"></script>
<script src="js/map.js"></script>
<script src="js/add.js"></script>
<%- include('partials/footer') -%>